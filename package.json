{
    "name": "typegc",
    "version": "1.0.0",
    "private": "true",
    "description": "Pragmatic, configurable, and maintainable user-defined type guards, using a Prisma-like schema.",
    "main": "index.js",
    "scripts": {
        "watch": "tsc -w",
        "typegc:test": "chokidar \"packages/typegc/tests/**/*.ts\" -c \"env TS_NODE_PROJECT='./tsconfig.json' mocha -r ts-node/register -r tsconfig-paths/register 'packages/typegc/tests/**/*.ts'\"",
        "typegc:test:once": "env TS_NODE_PROJECT='./tsconfig.json' mocha -r ts-node/register -r tsconfig-paths/register 'packages/typegc/tests/**/*.ts'",
        "build": "tsc",
        "format": "prettier --write ."
    },
    "keywords": [
        "typegc",
        "typescript",
        "type guards",
        "typescript tool"
    ],
    "author": "cursorsdottsx <cursors.dev@gmail.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cursorsdottsx/typegc.git"
    },
    "bugs": {
        "url": "https://github.com/cursorsdottsx/typegc/issues"
    },
    "homepage": "https://github.com/cursorsdottsx/typegc#readme"
}
